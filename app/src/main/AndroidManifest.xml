<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.himalacharya.discoverchitwan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Shopping"
            android:label="@string/title_activity_shopping"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.ShoppingEditor"
            android:label="@string/title_activity_shopping_editor"
            android:theme="@style/AppTheme"></activity>
        
        <provider
            android:authorities="com.example.himalacharya.discoverchitwan"
            android:name=".data.ShoppingProvider"
            android:exported="false"/>
    </application>

</manifest>